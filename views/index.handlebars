<header>
  <nav class="navbar navbar-dark bg-dark row d-flex justify-content-center">
    <h1 class="page_header text-white text-center">Burger Spot</h1>
  </nav>
</header>
<h2 id="add"><u>Add a Burger</u></h2>
<form class="create-form">

  <div class="form-group">
    <label for="newburger"></label>
    <input type="text" id="newburger" name="name">
    <button type="submit">Add Burger</button>
</form>
<div class="d-flex justify-content-center">
  <img src="/assets/images/burger.png" id="pic">
</div>
</div>
<div>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"><strong><u>New Burgers</u></strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="devour-burger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"><strong><u>Devoured Burgers</u></strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="delete-burger btn btn-danger" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><i class="fas fa-trash-alt"></i></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>